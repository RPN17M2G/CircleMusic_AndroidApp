<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="QueryTheme" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupTheme</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.CircleMusic" parent="TextAppearance.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="popupMenuStyle">@style/PopupTheme</item>
        <item name="android:actionMenuTextColor">@color/white</item>

    </style>



    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="popupMenuStyle">@style/PopupTheme</item>

    </style>

    <style name="Theme.CircleMusic.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
        <item name="android:itemBackground">@drawable/popup_menu_background</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="playlistImageShape">
        <item name="cornerSizeBottomRight">30dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
</resources>